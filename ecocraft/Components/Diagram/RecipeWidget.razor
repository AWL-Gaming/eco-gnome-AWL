@using Blazor.Diagrams.Components.Renderers;
@using ecocraft.Diagram;
@using ecocraft.Services
@inject ContextService ContextService

<div>
    <h5 class="eco-node recipe-node-title">@ContextService.GetTranslation(Node.Recipe)</h5>
    
    @foreach (var port in Node.Ports)
    {
        <PortRenderer @key="port" Port="port" />
    }
</div>

@code {
    // This gets filled by the library
    [Parameter] public RecipeNode Node { get; set; } = null!;
}