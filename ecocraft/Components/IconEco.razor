@using MudBlazor
@using ecocraft.Models

@if (Obj is not null || ObjName is not null)
{
    <MudImage Src=@($"/assets/eco-icons/{fileName}.png") Width=@Size Height=@Size Elevation="25" Class="rounded-lg" />
}


@code {
    [Parameter] public IHasIcon Obj { get; set; }
    [Parameter] public string ObjName { get; set; }
    [Parameter] public int Size { get; set; } = 32;
    [Parameter] public bool Foreground { get; set; } = false;

    private string fileName
    {
        get
        {
            if(ObjName is not null)
            {
                return ObjName;
            }
            else
            {
                switch (Obj)
                {
                    case ItemOrTag iot:
                        return iot.Name;
                    case Skill skill:
                        return skill.Name;
                    case CraftingTable ct:
                        return ct.Name;
                    default:
                        return "";
                }
            }
                   
        }
    }
}
