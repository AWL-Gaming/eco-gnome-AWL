@using ecocraft.Models
@using ecocraft.Services
@inject ContextService ContextService

<MudDialogContent>
    <MudContainer MaxWidth="MaxWidth.Medium" Style="min-width: 200px; min-height: 300px;">
        <MudGrid>
            <MudItem xs="12" Class="d-flex align-center">
                @foreach (var item in Tag.AssociatedItems)
                {
                    <MudText>@ContextService.GetTranslation(item)</MudText>
                }
            </MudItem>
        </MudGrid>
    </MudContainer>
</MudDialogContent>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; } = default!;

    [Parameter]
    public ItemOrTag Tag { get; set; }

    private void Ok()
    {
        MudDialog.Cancel();
    }
}
