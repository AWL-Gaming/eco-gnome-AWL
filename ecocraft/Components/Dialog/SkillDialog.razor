@using ecocraft.Models
@using ecocraft.Services
@using ecocraft.Components.Utils
@inject LocalizationService LocalizationService

<MudDialog Style="min-height: 500px;">
    <TitleContent>
        <MudStack Row AlignItems="AlignItems.Center" Spacing="1">
            <IconEco Obj="@Skill" Size="64" />
            <MudText Typo="Typo.h6">@LocalizationService.GetTranslation(Skill)</MudText>
        </MudStack>
    </TitleContent>
    <DialogContent>
        <MudStack>
            <MudText>@LocalizationService.GetTranslation("RelatedRecipes")</MudText>
            <RecipeList Recipes="@Skill.Recipes"/>
        </MudStack>
    </DialogContent>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; } = default!;

    [Parameter]
    public Skill Skill { get; set; }
}
