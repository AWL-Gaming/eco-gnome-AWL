
<MudDialog OnKeyDown="OnKeyDownAsync">
    @* <TitleContent>
        
    </TitleContent> *@
    <DialogContent>
        <MudItem>
            <MudTextField @bind-Value="ServerName" Immediate="true" Variant="Variant.Outlined" Label="Server name" />
        </MudItem>
    </DialogContent>

    <DialogActions>
        <MudButton OnClick="Submit" Color="Color.Primary">Valider</MudButton>
        <MudButton OnClick="Cancel" Color="Color.Secondary">Annuler</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; } = default!;

    [Parameter]
    public string ServerName { get; set; }

    private void Submit()
    {
        MudDialog.Close(DialogResult.Ok(ServerName));
    }

    private void Cancel()
    {
        MudDialog.Cancel();
    }

    private async Task OnKeyDownAsync(KeyboardEventArgs args)
    {
        switch (args.Key)
        {
            case "Enter":
            case "NumpadEnter":
                Submit();
                break;
        }
    }
}
