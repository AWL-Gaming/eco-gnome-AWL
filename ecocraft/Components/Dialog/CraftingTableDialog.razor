@using ecocraft.Models
@using ecocraft.Services
@inject ContextService ContextService

<MudDialog Style="min-height: 500px;">
    <TitleContent>        
        <MudStack Row AlignItems="AlignItems.Center" Spacing="1">            
            <IconEco Obj="@CraftingTable" Size="64" />             
            <MudText Typo="Typo.h6">@ContextService.GetTranslation(CraftingTable)</MudText>            
        </MudStack>        
    </TitleContent>
    <DialogContent>
        <MudStack>
            <MudText>Related recipes</MudText>
            <RecipeList Recipes="@CraftingTable.Recipes"/>
        </MudStack>
    </DialogContent>
</MudDialog>


@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; } = default!;

    [Parameter]
    public CraftingTable CraftingTable { get; set; }
}
