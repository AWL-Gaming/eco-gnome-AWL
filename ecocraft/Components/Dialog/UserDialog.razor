<MudDialogContent>
    <MudText Typo="Typo.h6">Pseudo</MudText>
    <MudTextField @bind-Value="Pseudo" Label="Pseudo" />
</MudDialogContent>

<MudDialogActions>
    <MudButton OnClick="Submit" Color="Color.Primary">Valider</MudButton>
    <MudButton OnClick="Cancel" Color="Color.Secondary">Annuler</MudButton>
</MudDialogActions>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    [Parameter]
    public string Pseudo { get; set; }

    private void Submit()
    {
        MudDialog.Close(DialogResult.Ok(Pseudo));
    }

    private void Cancel()
    {
        MudDialog.Cancel();
    }
}
