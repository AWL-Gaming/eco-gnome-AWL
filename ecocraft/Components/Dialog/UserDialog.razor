
<MudDialog OnKeyDown="OnKeyDownAsync">
    <DialogContent>
        @* <MudText Typo="Typo.h6">Pseudo</MudText> *@
        <MudTextField @bind-Value="Pseudo" Immediate="true" Variant="Variant.Outlined" Label="Pseudo" />
    </DialogContent>

    <DialogActions>
        <MudButton OnClick="Submit" Color="Color.Primary">Valider</MudButton>
        <MudButton OnClick="Cancel" Color="Color.Secondary">Annuler</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    [Parameter]
    public string Pseudo { get; set; }

    private void Submit()
    {
        MudDialog.Close(DialogResult.Ok(Pseudo));
    }

    private void Cancel()
    {
        MudDialog.Cancel();
    }

    private async Task OnKeyDownAsync(KeyboardEventArgs args)
    {
        switch (args.Key)
        {
            case "Enter":
            case "NumpadEnter":
                Submit();
                break;
        }
    }
}
